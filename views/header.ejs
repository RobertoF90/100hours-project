<header
  class="d-flex justify-content-between align-items-center py-2 px-3 bg-light border"
>
  <% if (user.role ==='teacher') { %>
  <a class="btn btn-primary shadow-sm" href="/courses/create">New Course</a>
  <% } else { %>
  <a class="btn btn-primary shadow-sm" href="/courses/enroll">Enroll</a>
  <% } %>

  <a
    href="/"
    class="h2 text-uppercase text-decoration-none text-center text-dark"
    ><%= username%>'s DASHBOARD</a
  >
  <button
    type="button"
    class="btn btn-secondary"
    data-bs-container="body"
    data-bs-toggle="popover"
    data-bs-placement="bottom"
    data-bs-html="true"
    data-bs-content="
    <a class='list-group-item mb-2' href='/profile'>Profile</a>
    <a class='list-group-item' href='/auth/logout'>Logout</a>
    "
  >
    Profile
  </button>
</header>
