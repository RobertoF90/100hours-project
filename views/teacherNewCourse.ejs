<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <title>Teacher Dashboard</title>
  </head>
  <body>
    <%- include('header'); -%>
    <div
      style="min-height: 90vh"
      class="container-fluid h-100 row justify-content-center"
    >
      <aside class="col-3 bg-light p-0 pt-2">
        <h3 class="px-2">Your Courses</h3>
        <ul class="list-group list-group-flush">
          <% courses.forEach(course => { %>
          <li class="list-group-item">
            <a class="text-decoration-none" href="/courses/<%=course._id%>"
              ><%=course.title %></a
            >
          </li>
          <% })%>
        </ul>
      </aside>
      <main class="col-9">
        <div class="offset-md-4">
          <h2 class="my-3 text-center">Create new course</h2>
        </div>

        <form action="/api/v1/courses/create/newcourse" method="POST">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Course Title"
          />
          <input
            class="btn btn-primary mt-4 d-block mx-auto"
            style="width: 75px"
            type="submit"
            value="Create"
          />
        </form>
      </main>
    </div>
    <script src="/js/bundle.js"></script>
  </body>
</html>
