<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <title>Teacher Dashboard</title>
  </head>
  <body>
    <%- include('header'); -%>

    <div
      style="min-height: 90vh"
      class="container-fluid h-100 row justify-content-center"
    >
      <aside class="col-3 bg-light p-0 pt-2">
        <h3 class="px-2">Your Courses</h3>
        <ul class="list-group list-group-flush">
          <% courses.forEach(course => { %>
          <li class="list-group-item">
            <a class="text-decoration-none" href="/courses/<%=course._id%>"
              ><%=course.title %></a
            >
          </li>
          <% })%>
        </ul>
      </aside>
      <main class="col-9">
        <h2 class="my-2 text-center"><%=student.username %></h2>
        <div class="container row row-cols-lg-4 row-cols-sm-1 row-cols-md-3">
          <% student.homework.forEach(homework => { %>
          <div class="col mt-3 mx-4 card text-center">
            <a
              class="card-body text-decoration-none"
              href="/homework/<%=homework.id %>"
            >
              <h5 class="card-title"><%= homework.title %></h5>
              <h5 class="card-text"><%= homework.course.title %></h5>
              <h6 class="card-text"><%= homework.type %></h6>
              <div class="card-text">
                <% if (homework.body) { %>
                <!-- <%-formatText.truncate(homework.body, 120) %>  -->
                <% } %>
              </div>
              <% if (homework.status === 'Checked') { %>
              <p class="card-text text-success"><%= homework.status %></p>
              <% } else if (homework.status === 'Delivered') { %>
              <p class="card-text text-warning"><%= homework.status %></p>
              <% } else { %>
              <p class="card-text text-danger"><%= homework.status %></p>
              <% } %>
            </a>
          </div>
          <%}) %>
        </div>
      </main>
    </div>
    <script src="/js/bundle.js"></script>
  </body>
</html>
