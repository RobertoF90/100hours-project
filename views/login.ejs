<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <script
      src="https://kit.fontawesome.com/9bf5837a99.js"
      crossorigin="anonymous"
    ></script>
    <title>Login</title>
  </head>
  <body>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %>

    <div
      class="container w-50 position-absolute top-50 start-50 translate-middle d-flex flex-column border border-2 rounded p-4"
    >
      <h1 class="text-success text-center">TeachME</h1>
      <h2 class="text-center">LOGIN</h2>
      <form action="/auth/login" method="POST" class="form">
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="user email"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="password"
          />
        </div>
        <div class="mb-3 mx-auto d-flex justify-content-evenly">
          <input class="btn btn-primary" type="submit" value="Login" />
          <a class="btn btn-primary" href="/signup">Signup</a>
        </div>
      </form>
      <div class="btn btn-danger mx-auto">
        <i class="fa-brands fa-google"></i
        ><a class="btn" href="/auth/google">Login with google</a>
      </div>
    </div>
  </body>
</html>
