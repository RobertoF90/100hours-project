<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <title>Student Dashboard</title>
  </head>
  <body>
    <%- include('header'); -%>
    <div
      style="max-height: 90vh"
      class="container-fluid h-100 row justify-content-center"
    >
      <aside class="col-3 bg-light p-0 pt-2 border border-top-0">
        <h3 class="px-2">Your Courses</h3>
        <ul class="list-group list-group-flush">
          <% courses.forEach(course => { %>
          <li class="list-group-item">
            <a class="text-decoration-none" href="courses/<%=course._id%>"
              ><%=course.title %>
            </a>
          </li>

          <% })%>
        </ul>
      </aside>
      <main style="max-height: 90vh" class="col-9 overflow-scroll">
        <div class="offset-md-4">
          <h3 class="my-2">Latest homework</h3>
        </div>
        <% courses.forEach(course => { %>
        <div class="offset-md-5">
          <a class="h3 text-decoration-none" href="courses/<%=course._id%>"
            ><%=course.title %></a
          >
        </div>
        <div class="container row row-cols-4 align-items-center">
          <% if (user.homework){ %> <% let homework =
          <!-- @TODO FILTER HOMEWORK BASED ON COURSES   -->

          user.homework.filter((homework) => homework.course.toString() ===
          course.id).slice(0,3) %> <% homework.forEach(homework => { %>
          <div class="my-3 mx-3 card text-center">
            <a
              class="card-body text-decoration-none"
              href="homework/<%=homework.id %>"
            >
              <h5 class="card-title"><%= homework.title %></h5>
              <h5 class="card-text"><%= homework.type %></h5>
              <div class="homework--content">
                <% if (homework.body) { %> <% } %>
              </div>

              <% if (homework.status === 'Checked') { %>
              <p class="card-text text-success"><%= homework.status %></p>
              <% } else if (homework.status === 'Delivered') { %>
              <p class="card-text text-warning"><%= homework.status %></p>
              <% } else { %>
              <p class="card-text text-danger"><%= homework.status %></p>
              <% } %>
            </a>
          </div>
          <%}) } %>
        </div>
        <% })%>
      </main>
    </div>

    <script src="js/bundle.js"></script>
  </body>
</html>
