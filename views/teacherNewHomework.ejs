<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>

    <title>Document</title>
  </head>
  <body>
    <%- include('header'); -%>

    <div
      style="min-height: 90vh"
      class="container-fluid h-100 row justify-content-center"
    >
      <aside class="col-3 bg-light p-0 pt-2 border border-top-0">
        <h3 class="px-2">Courses</h3>

        <ul class="list-group list-group-flush">
          <% courses.forEach(course => { %>
          <li class="list-group-item">
            <a
              class="text-decoration-none"
              href="/courses/<%=course._id%>/newHomework"
              ><%=course.title %></a
            >
          </li>
          <% })%>
        </ul>
      </aside>
      <main class="col-9">
        <div class="offset-md-4">
          <h3 class="my-2">Create new exercise - <%=course.title %></h3>
        </div>

        <div class="container-fluid">
          <div class="main__content--element">
            <form action="/api/v1/homework/create/" method="POST">
              <input type="hidden" name="course" value="<%=course.id%>" />

              <div class="mb-3">
                <label for="homework-type">Homework Type:</label>
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="type"
                  id="homework-type"
                >
                  <option value="Composition">Composition</option>
                  <option value="Free">Free</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                  class="form-control"
                  type="text"
                  name="title"
                  placeholder="Homework Title"
                />
              </div>

              <div class="mb-3">
                <label for="task" class="form-label">Task</label>
                <input
                  class="form-control"
                  type="text"
                  name="task"
                  placeholder="Homework Task"
                />
              </div>

              <p class="mb-0" for="student">Assign to:</p>
              <ul class="list-group mb-3">
                <li class="list-group-item">
                  <input
                    class="form-check-input me-1"
                    type="checkbox"
                    value="Everyone"
                    id="everyone"
                    name="assignTo"
                  />
                  <label class="form-check-label stretched-link" for="everyone"
                    >Everyone</label
                  >
                </li>
                <% course.students.forEach((student, i) => { %>
                <li class="list-group-item">
                  <input
                    class="form-check-input me-1"
                    type="checkbox"
                    value="<%=student.id%>"
                    id="<%=student.username %>"
                    name="assignTo"
                  />
                  <label
                    class="form-check-label stretched-link"
                    for="<%=student.username %>"
                  >
                    <%=student.username %></label
                  >
                </li>

                <% })%>
              </ul>

              <input
                class="btn btn-primary mt-4 offset-md-5"
                type="submit"
                value="Create"
              />
            </form>
          </div>
        </div>
      </main>
    </div>
    <script src="/js/bundle.js"></script>
  </body>
</html>
