<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <title>Teacher Dashboard</title>
  </head>
  <body>
    <%- include('header'); -%>
    <div
      style="min-height: 90vh"
      class="container-fluid h-100 row justify-content-center"
    >
      <aside class="col-3 bg-light p-0 pt-2">
        <h3 class="px-2">Your Courses</h3>
        <ul class="list-group list-group-flush">
          <% courses.forEach(course => { %>
          <li class="list-group-item">
            <a class="text-decoration-none" href="/courses/<%=course._id%>"
              ><%=course.title %></a
            >
          </li>
          <% })%>
        </ul>
      </aside>
      <main class="col-9">
        <div class="offset-md-4">
          <h2 class="my-2"><%=course.title %></h2>
        </div>
        <div class="d-flex">
          <% course.students.forEach(student => { %>
          <div class="mt-3 mx-3 card text-center">
            <a
              class="card-body text-decoration-none"
              href="/users/<%=student.id %>"
            >
              <h4 class="card-title"><%= student.username %></h4>

              <h4 class="card-text">
                <% let completed = 0; %> Homework: <% student.homework.forEach(
                homework => { homework.status === 'Checked' && completed++ }) %>
                <%= completed %> / <%= student.homework.length %>
              </h4>

              <h5 class="card-text">Last online:</h5>
              <h5 class="card-text">
                <%= moment(student.lastOnline).format('lll') %>
              </h5>
            </a>
          </div>
          <% })%>
        </div>
        <a
          href="<%=course.id%>/newHomework"
          class="btn btn-primary my-4 offset-md-4"
        >
          New Homework</a
        >
      </main>
    </div>
    <script src="/js/bundle.js"></script>
  </body>
</html>
